<span
  class={{class-names
    "euiBetaBadge"
    (if @iconType "euiBetaBadge--iconOnly")
  }}
  title={{@title}}
  ...attributes
>
  {{#if @iconType}}
    <EuiIcon
      class="euiBetaBadge__icon"
      @type={{@iconType}}
      @size="m"
      aria-hidden="true"
    />
  {{else}}
    {{@label}}
  {{/if}}
</span>
