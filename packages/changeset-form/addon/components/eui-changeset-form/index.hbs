{{#let (arg-or-default @id (unique-id)) as |formId|}}
  <EuiForm
    @tagName="form"
    id={{formId}}
    ...attributes
    {{on "submit" (fn this.handleSubmit @changeset)}}
    {{on "reset" (fn this.handleReset @changeset)}}
    {{did-insert (fn this.validate @initialValidation)}}
  >
    <:content>
      <EuiChangesetForm::Context
        @formId={{formId}}
        @changeset={{@changeset}}
        as |Context|
      >
        {{yield
          (hash
            FieldBase=(component
              (ensure-safe-component Context.FieldBase)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldText=(component
              (ensure-safe-component Context.FieldText)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldTextArea=(component
              (ensure-safe-component Context.FieldTextArea)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldPassword=(component
              (ensure-safe-component Context.FieldPassword)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldRadio=(component
              (ensure-safe-component Context.FieldRadio)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldCheckbox=(component
              (ensure-safe-component Context.FieldCheckbox)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldSwitch=(component
              (ensure-safe-component Context.FieldSwitch)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldRadioGroup=(component
              (ensure-safe-component Context.FieldRadioGroup)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldCheckboxGroup=(component
              (ensure-safe-component Context.FieldCheckboxGroup)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldDualRangeSlider=(component
              (ensure-safe-component Context.FieldDualRangeSlider)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldRangeSlider=(component
              (ensure-safe-component Context.FieldRangeSlider)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldNumber=(component
              (ensure-safe-component Context.FieldNumber)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldSelect=(component
              (ensure-safe-component Context.FieldSelect)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
            FieldComboBox=(component
              (ensure-safe-component Context.FieldComboBox)
              fullWidth=@fullWidth
              hasSubmitted=this.hasSubmitted
            )
          )
          @changeset
          this.hasSubmitted
          formId
        }}
      </EuiChangesetForm::Context>
    </:content>
  </EuiForm>
{{/let}}