{{#let (arg-or-default @id (unique-id)) as |theId|}}
  <EuiFormRow
    @labelType={{@labelType}}
    @display={{@display}}
    @hasEmptyLabelSpace={{@hasEmptyLabelSpace}}
    @fullWidth={{@fullWidth}}
    @hasChildLabel={{@hasChildLabel}}
    @label={{@label}}
    @labelAppend={{@labelAppend}}
    @id={{theId}}
    @isInvalid={{this.errors.length}}
    @error={{this.errors}}
    @helpText={{@helpText}}
    @errorClasses={{@errorClasses}}
    ...attributes
  >
    <EuiTextArea
      aria-label={{@ariaLabel}}
      class={{@fieldClasses}}
      @value={{this.value}}
      @isInvalid={{this.errors.length}}
      @fullWidth={{@fullWidth}}
      @compressed={{@compressed}}
      @resize={{@resize}}
      @inputRef={{@inputRef}}
      @id={{theId}}
      autofocus={{@autofocus}}
      placeholder={{@placeholder}}
      {{on "blur" this.validate}}
      {{on "input" this.handleInput}}
    >
      <:prepend as |classes|>
        {{yield classes to="prepend"}}
      </:prepend>
      <:append as |classes|>
        {{yield classes to="append"}}
      </:append>
    </EuiTextArea>
  </EuiFormRow>
{{/let}}