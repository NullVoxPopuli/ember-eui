{{#let (arg-or-default @id (unique-id)) as |theId|}}
  <EuiFormRow
    class={{@rowClasses}}
    @labelType={{@labelType}}
    @display={{@display}}
    @hasEmptyLabelSpace={{@hasEmptyLabelSpace}}
    @fullWidth={{@fullWidth}}
    @hasChildLabel={{@hasChildLabel}}
    @label={{@label}}
    @labelAppend={{@labelAppend}}
    @id={{theId}}
    @isInvalid={{this.errors.length}}
    @error={{this.errors}}
    @helpText={{@helpText}}
    @errorClasses={{@errorClasses}}
  >
    {{yield
      (hash
        id=theId
        formId=@formId
        isInvalid=this.errors.length
        validate=this.validate
        disabled=@disabled
      )
    }}
  </EuiFormRow>
{{/let}}