{{#let (arg-or-default @id (unique-id)) as |theId|}}
  <EuiFormRow
    @labelType={{@labelType}}
    @display={{@display}}
    @hasEmptyLabelSpace={{@hasEmptyLabelSpace}}
    @fullWidth={{@fullWidth}}
    @hasChildLabel={{@hasChildLabel}}
    @label={{@label}}
    @labelAppend={{@labelAppend}}
    @id={{theId}}
    @isInvalid={{this.errors.length}}
    @error={{this.errors}}
    @helpText={{@helpText}}
    @errorClasses={{@errorClasses}}
    ...attributes
  >
    <EuiRadioGroup
      aria-label={{@ariaLabel}}
      class={{@fieldClasses}}
      @disabled={{@disabled}}
      @compressed={{@compressed}}
      @name={{@name}}
      @options={{@options}}
      @idSelected={{this.value}}
      @legend={{@legend}}
      @id={{theId}}
      @onChange={{this.handleChange}}
      autofocus={{@autofocus}}
    />
  </EuiFormRow>
{{/let}}