{{#let (arg-or-default @id (unique-id)) as |theId|}}
  <EuiSwitch
    class={{@fieldClasses}}
    form={{@formId}}
    aria-label={{@ariaLabel}}
    @id={{theId}}
    @showLabel={{@showLabel}}
    @label={{@label}}
    @checked={{this.value}}
    @onChange={{this.handleChange}}
    @useLabelBlock={{has-block "label"}}
    @disabled={{@disabled}}
    @compressed={{@compressed}}
    @type={{@type}}
    ...attributes
  >
    <:label>
      {{yield to="label"}}
    </:label>
  </EuiSwitch>
{{/let}}