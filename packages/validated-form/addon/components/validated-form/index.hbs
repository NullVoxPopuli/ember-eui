{{#let (arg-or-default @id (unique-id)) as |formId|}}
  <EuiForm
    @tagName="form"
    ...attributes
    id={{formId}}
    {{on "submit" this.handleSubmit}}
    {{on "submit" this.handleReset}}
    {{did-insert this.setNewValidity}}
  >
    {{yield
      (hash
        formHasBeenValidated=this.formHasBeenValidated
        onValidityChange=this.onChildValidityChange
        register=this.register
        unregister=this.unregister
        isValid=this.isValid
        isInvalid=this.isInvalid
        isTouched=this.isTouched
        isInvalidAndTouched=this.isInvalidAndTouched
        formId=formId
        FieldNumber=(component
          "validated-form/field-number"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldText=(component
          "validated-form/field-text"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldPassword=(component
          "validated-form/field-password"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldTextArea=(component
          "validated-form/field-text-area"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldSelect=(component
          "validated-form/field-select"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldComboBox=(component
          "validated-form/field-combo-box"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldCheckboxGroup=(component
          "validated-form/field-checkbox-group"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldRadioGroup=(component
          "validated-form/field-radio-group"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldRangeSlider=(component
          "validated-form/field-range-slider"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldRangeDualSlider=(component
          "validated-form/field-dual-range-slider"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
        FieldSwitch=(component
          "validated-form/field-switch"
          register=this.register
          unregister=this.unregister
          formHasBeenValidated=this.formHasBeenValidated
          onValidityChange=this.onChildValidityChange
          fullWidth=@fullWidth
          formId=formId
        )
      )
    }}
  </EuiForm>
{{/let}}