{{#let (arg-or-default @id (unique-id)) as |theId|}}
  <EuiFormRow
    @label={{@label}}
    @helpText={{@helpText}}
    @id={{theId}}
    @error={{this.errors}}
		@isInvalid={{this.errors.length}}
		@fullWidth={{@fullWidth}}
  >
    <EuiFieldText
      @value={{this.value}}
      @id={{theId}}
			@fullWidth={{@fullWidth}}
      {{on "blur" this.validate}}
      {{on "input" this.handleInput}}
    >
      <:prepend>
        {{yield to="prepend"}}
      </:prepend>
    </EuiFieldText>
  </EuiFormRow>
{{/let}}