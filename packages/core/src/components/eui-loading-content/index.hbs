{{! @glint-nocheck: not typesafe yet }}
<span class="euiLoadingContent" ...attributes>
  {{#each
    (repeat
      (if
        (gt @lines 10)
        10
        (if
          (lt @lines 1)
          1
          @lines
        )
      )
    )
  }}
    <span
      class={{class-names
        "euiLoadingContent__singleLine"
        @singleLineClasses
      }}
    >
      <span class="euiLoadingContent__singleLineBackground" />
    </span>
  {{/each}}
</span>