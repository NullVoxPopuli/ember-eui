{{#let
  (eui-page-restrict-width (arg-or-default @restrictWidth false) @style)
  as |styling|
}}
  <div
    class={{class-names
      (concat "euiPage--" styling.widthClassName)
      componentName="EuiPageContentBody"
      paddingSize=@paddingSize
    }}
    {{style styling.newStyle}}
    ...attributes
  >
    {{yield}}
  </div>
{{/let}}