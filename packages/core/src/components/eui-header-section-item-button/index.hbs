{{! @glint-nocheck: not typesafe yet }}
<EuiButtonEmpty
  class="euiHeaderSectionItemButton"
  ...attributes
  @isDisabled={{@disabled}}
  @href={{@href}}
  @color="text"
  {{did-insert (set this "buttonRef")}}
  {{on "click" (optional @onClick)}}
>
  <span
    {{did-insert this.setAnimationTargetRef}}
    class="euiHeaderSectionItemButton__content"
  >
    {{yield}}
  </span>
  {{#if @notification}}
    {{#if (eq @notification true)}}
      <EuiIcon
        @iconClasses="euiHeaderSectionItemButton__notification euiHeaderSectionItemButton__notification--dot"
        @color={{arg-or-default @notificationColor "accent"}}
        @type="dot"
        @size="l"
      />
    {{else if @notification}}
      <EuiHideFor @sizes={{array "xs"}}>
        <EuiNotificationBadge
          class="euiHeaderSectionItemButton__notification euiHeaderSectionItemButton__notification--badge"
          @color={{arg-or-default @notificationColor "accent"}}
        >
          {{@notification}}
        </EuiNotificationBadge>
      </EuiHideFor>
      <EuiShowFor @sizes={{array "xs"}}>
        <EuiIcon
          @iconClasses="euiHeaderSectionItemButton__notification euiHeaderSectionItemButton__notification--dot"
          @color={{arg-or-default @notificationColor "accent"}}
          @type="dot"
          @size="l"
        />
      </EuiShowFor>
    {{/if}}
  {{/if}}
</EuiButtonEmpty>