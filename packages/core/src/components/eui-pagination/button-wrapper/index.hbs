{{! @glint-nocheck: not typesafe yet }}
{{#if (arg-or-default @inList true)}}
  <li>
    <EuiPaginationButton
      @isActive={{eq @pageIndex @props.activePage}}
      @totalPages={{@props.pageCount}}
      @pageIndex={{@pageIndex}}
      aria-controls={{@props.ariaControls}}
      @hideOnMobile={{true}}
      {{on "click" (fn @props.safeClick @pageIndex)}}
    />
  </li>
{{else}}
  <EuiPaginationButton
    @isActive={{eq @pageIndex @props.activePage}}
    @totalPages={{@props.pageCount}}
    @pageIndex={{@pageIndex}}
    aria-controls={{@props.ariaControls}}
    @hideOnMobile={{true}}
    {{on "click" (fn @props.safeClick @pageIndex)}}
  />
{{/if}}