{{#if @href}}
  <a
    href={{@href}}
    class={{class-names
      (if @disabled "euiLink--disabled")
      componentName="EuiLink"
      color=(arg-or-default @color "primary")
    }}
    target={{@target}}
    disabled={{@disabled}}
    ...attributes
  >
    {{#if
      (or
        (and (eq @target "_blank") (not-eq @external false)) (eq @external true)
      )
    }}
      <EuiIcon
        @type="popout"
        aria-label="External link"
        @size="s"
        class="euiLink__externalIcon"
      />
      {{#if (eq @target "_blank")}}
        <span {{screen-reader-only}}>
          (opens in a new tab or window)
        </span>
      {{/if}}
    {{/if}}
    {{yield}}
  </a>

{{else}}
  <button
    type={{arg-or-default @type "button"}}
    class={{class-names
      (if @disabled "euiLink--disabled")
      componentName="EuiLink"
      color=(arg-or-default @color "primary")
    }}
    disabled={{@disabled}}
    ...attributes
  >
    {{yield}}
  </button>

{{/if}}