{{#let (unique-id) as |theID|}}
  <pre
    style="height:300px; display:block; overflow: scroll; position:relative;"
    id={{theID}}
    ...attributes
  >
    <VerticalCollection
      @items={{@data}}
      @tagName="code"
      class="euiCodeBlock__code"
      style="min-height: 100%;width: 100%; background-color: red;"
      data-code-language={{@language}}
      @estimateHeight={{@rowHeight}}
      @staticHeight={{true}}
      @bufferSize={{1}}
      @containerSelector={{concat "#" theID}}
      as |opt index|
    >
      {{this.getHtmlContent opt index @rowHeight}}
    </VerticalCollection>
  </pre>
{{/let}}