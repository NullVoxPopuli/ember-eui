<span
  class={{class-names
    "euiLoadingLogo "
    (if
      (eq @size "m")
      "euiLoadingLogo--medium"
      (if (eq @size "l") "euiLoadingLogo--large" "euiLoadingLogo--xLarge")
    )
  }}
>
  <span class="euiLoadingLogo__icon">
    <EuiIcon @type={{arg-or-default @logo "logoKibana"}} @size={{arg-or-default @size "m"}} />
  </span>
</span>