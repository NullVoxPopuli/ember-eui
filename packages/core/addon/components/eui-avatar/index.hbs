{{#let
  (inline-styles
    componentName="EuiAvatar"
    componentArgs=(hash
      name=@name
      color=@color
      iconColor=@iconColor
      iconSize=@iconSize
      iconType=@iconType
      imageUrl=@imageUrl
      initials=@initials
    )
  )
  as |inlineStyles|
}}
  <div
    class={{class-names
      (if @isDisabled "euiAvatar-isDisabled")
      (if (eq @color "plain") "euiAvatar--plain")
      componentName="EuiAvatar"
      size=(arg-or-default @size "m")
      type=(arg-or-default @type "user")
    }}
    aria-label={{if @isDisabled undefined @name}}
    title={{@name}}
    role={{if @isDisabled "presentation" "img"}}
    ...attributes
    {{simple-style inlineStyles}}
  >
    {{#if (and (not @imageUrl) (not @iconType))}}
      <span aria-hidden="true">
        {{to-initials @name @initialLength @initials}}
      </span>
    {{else if @iconType}}
      <EuiIcon
        @iconClasses="euiAvatar__icon"
        @size={{or @iconSize @size}}
        @type={{@iconType}}
        aria-label={{@name}}
        role={{if @isDisabled "presentation" "img"}}
        @color={{or
          @iconColor
          (if (eq @iconColor null) @iconColor inlineStyles.color)
        }}
      />
    {{/if}}
  </div>
{{/let}}