{{#let
  (arg-or-default @size "m")
  (arg-or-default @iconSize "m")
  as |size iconSize|
}}
  {{#if (and @href (not (or @isLoading @isDisabled)))}}
    <a
      class={{class-names
        (if (or @isLoading @isDisabled) "euiButtonEmpty-isDisabled")
        componentName="EuiButtonEmpty"
        color=(arg-or-default @color "primary")
        size=size
        flush=@flush
      }}
      href={{@href}}
      target={{@target}}
      ...attributes
    >
      <EuiButtonContent
        class="euiButtonEmpty__content {{@contentClasses}}"
        @isLoading={{@isLoading}}
        @iconType={{@iconType}}
        @iconSide={{@iconSide}}
        @iconSize={{if (eq size "xs") "s" iconSize}}
        @iconClasses={{@iconClasses}}
        @useSvg={{@useSvg}}
        @useComponent={{@useComponent}}
        @textClasses={{class-names "euiButtonEmpty__text" @textClasses}}
      >
        {{yield}}
      </EuiButtonContent>
    </a>
  {{else}}
    <button
      class={{class-names
        (if (or @isLoading @isDisabled) "euiButtonEmpty-isDisabled")
        componentName="EuiButtonEmpty"
        color=(arg-or-default @color "primary")
        size=size
        flush=@flush
      }}
      disabled={{or @isLoading @isDisabled}}
      type={{if @type @type "button"}}
      aria-pressed={{@isSelected}}
      ...attributes
    >
      <EuiButtonContent
        class="euiButtonEmpty__content {{@contentClasses}}"
        @isLoading={{@isLoading}}
        @iconType={{@iconType}}
        @iconSide={{@iconSide}}
        @iconSize={{if (eq size "xs") "s" iconSize}}
        @iconClasses={{@iconClasses}}
        @useSvg={{@useSvg}}
        @useComponent={{@useComponent}}
        @textClasses={{class-names "euiButtonEmpty__text" @textClasses}}
      >
        {{yield}}
      </EuiButtonContent>
    </button>
  {{/if}}
{{/let}}