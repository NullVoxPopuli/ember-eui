<EuiButtonEmpty
  class={{class-names
    "euiHeaderSectionItemButton"
  }}
  ...attributes
  @isDisabled={{@disabled}}
  @href={{@href}}
  @color={{arg-or-default @color "text"}}
  {{on "click" (optional @onClick)}}
>
  {{yield}}
  {{#if @notification}}
    {{#if (eq @notification true)}}
      <EuiIcon
        @iconClasses="euiHeaderSectionItemButton__notification euiHeaderSectionItemButton__notification--dot"
        @color={{arg-or-default @notificationColor "accent"}}
        @type="dot"
        @size="l"
      />
    {{else}}
      <EuiNotificationBadge
        class="euiHeaderSectionItemButton__notification euiHeaderSectionItemButton__notification--badge"
        @color={{arg-or-default @notificationColor "accent"}}
      >
        {{@notification}}
      </EuiNotificationBadge>
    {{/if}}
  {{/if}}
</EuiButtonEmpty>