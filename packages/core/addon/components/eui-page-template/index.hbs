{{#if (eq this.template "centeredBody")}}
  <EuiPage
    class={{this.classes}}
    @paddingSize={{if
      (or @pageSideBar (has-block "pageSideBar"))
      "none"
      @paddingSize
    }}
    @grow={{arg-or-default @grow true}}
    {{style (inline-styles min-height=(concat this.minHeight "px"))}}
    ...attributes
  >
    {{#if (has-block "pageSideBar")}}
      {{yield to="pageSideBar"}}
    {{else if @pageSideBar}}
      <EuiPageSideBar
        class={{@pageSideBarProps.className}}
        @sticky={{true}}
        @paddingSize={{@paddingSize}}
      >
        {{@pageSideBar}}
      </EuiPageSideBar>
    {{/if}}
    <EuiPageBody
      class={{@pageBodyProps.className}}
      @paddingSize={{if
        (or @pageSideBar (has-block "pageSideBar"))
        (arg-or-default @paddingSize "l")
        "none"
      }}
      @restrictWidth={{if
        (or @pageSideBar (has-block "pageSideBar"))
        "false"
        @restrictWidth
      }}
    >
      {{#if (has-block "pageHeader")}}
        {{yield to="pageHeader"}}
      {{else if @pageHeader}}
        <EuiPageHeader
          @restrictWidth={{if
            (or @pageSideBar (has-block "pageSideBar"))
            @restrictWidth
            false
          }}
          @bottomBorder={{if
            (or @pageSideBar (has-block "pageSideBar"))
            false
            @bottomBorder
          }}
          @paddingSize={{@paddingSize}}
          @responsive={{arg-or-default @responsive true}}
          @iconType={{@pageHeader.iconType}}
          @tabs={{@pageHeader.tabs}}
          @pageTitle={{@pageHeader.pageTitle}}
          @isPageTitleProvided={{has-block "pageHeaderPageTitle"}}
          @isDefaultProvided={{has-block "pageHeaderDefault"}}
          @isDescriptionProvided={{has-block "pageHeaderDescription"}}
          @isRightSideItemsProvided={{has-block "pageHeaderRightSideItems"}}
        >
          <:pageTitle>
            {{yield to="pageHeaderPageTitle"}}
          </:pageTitle>
          <:default>
            {{yield to="pageHeaderDefault"}}
          </:default>
          <:description>
            {{yield to="pageHeaderDescription"}}
          </:description>
          <:rightSideItems as |item|>
            {{yield item to="pageHeaderRightSideItems"}}
          </:rightSideItems>
        </EuiPageHeader>
      {{/if}}
      <EuiPageContent
        class={{@pageContentProps.className}}
        @verticalPosition="center"
        @horizontalPosition="center"
        @paddingSize={{arg-or-default @paddingSize "none"}}
      >
        <EuiPageContentBody
          class={{@pageContentBodyProps.className}}
          @paddingSize={{if
            (or @pageSideBar (has-block "pageSideBar"))
            @paddingSize
            "none"
          }}
          @restrictWidth={{@restrictWidth}}
        >
          {{yield to="default"}}
        </EuiPageContentBody>
      </EuiPageContent>
    </EuiPageBody>
  </EuiPage>
{{else if (eq this.template "centeredContent")}}
  <EuiPage
    class={{this.classes}}
    @paddingSize="none"
    @grow={{arg-or-default @grow true}}
    {{style (inline-styles min-height=(concat this.minHeight "px"))}}
    ...attributes
  >
    {{#if (has-block "pageSideBar")}}
      {{yield to="pageSideBar"}}
    {{else if @pageSideBar}}
      <EuiPageSideBar
        class={{@pageSideBarProps.className}}
        @sticky={{true}}
        @paddingSize={{@paddingSize}}
      >
        {{@pageSideBar}}
      </EuiPageSideBar>
    {{/if}}
    {{#if (or (has-block "pageSideBar") @pageSideBar)}}
      <EuiPageBody
        @panelled={{true}}
        @paddingSize={{arg-or-default @paddingSize "l"}}
        class={{this.pageBodyClass}}
      >
        {{#if (has-block "pageHeader")}}
          {{yield to="pageHeader"}}
        {{else if @pageHeader}}
          <EuiPageHeader
            @restrictWidth={{@restrictWidth}}
            @paddingSize={{if
              (or @pageHeader (has-block "pageHeader"))
              ""
              this.paddingSize
            }}
            @responsive={{arg-or-default @responsive true}}
            @iconType={{@pageHeader.iconType}}
            @tabs={{@pageHeader.tabs}}
            @pageTitle={{@pageHeader.pageTitle}}
            @isPageTitleProvided={{has-block "pageHeaderPageTitle"}}
            @isDefaultProvided={{has-block "pageHeaderDefault"}}
            @isDescriptionProvided={{has-block "pageHeaderDescription"}}
            @isRightSideItemsProvided={{has-block "pageHeaderRightSideItems"}}
          >
            <:pageTitle>
              {{yield to="pageHeaderPageTitle"}}
            </:pageTitle>
            <:default>
              {{yield to="pageHeaderDefault"}}
            </:default>
            <:description>
              {{yield to="pageHeaderDescription"}}
            </:description>
            <:rightSideItems as |item|>
              {{yield item to="pageHeaderRightSideItems"}}
            </:rightSideItems>
          </EuiPageHeader>
        {{/if}}

        <EuiPageContent
          @verticalPosition="center"
          @horizontalPosition="center"
          @hasShadow={{false}}
          @color="subdued"
          @paddingSize={{@pageContentProps.paddingSize}}
          style={{if
            (or @pageHeader (has-block "pageHeader"))
            ""
            "display: flex"
          }}
          class={{this.pageContentPropsClass}}
        >
          <EuiPageContentBody
            @restrictWidth={{@restrictWidth}}
            class={{this.pageContentBodyPropsClass}}
          >
            {{yield to="default"}}
          </EuiPageContentBody>
        </EuiPageContent>
      </EuiPageBody>
    {{else}}
      <EuiPageBody class={{this.pageBodyClass}} @paddingSize="l">
        {{#if (has-block "pageHeader")}}
          {{yield to="pageHeader"}}
        {{else if @pageHeader}}
          <EuiPageHeader
            @restrictWidth={{@restrictWidth}}
            @paddingSize={{this.paddingSize}}
            @responsive={{arg-or-default @responsive true}}
            @iconType={{@pageHeader.iconType}}
            @tabs={{@pageHeader.tabs}}
            @pageTitle={{@pageHeader.pageTitle}}
            @isPageTitleProvided={{has-block "pageHeaderPageTitle"}}
            @isDefaultProvided={{has-block "pageHeaderDefault"}}
            @isDescriptionProvided={{has-block "pageHeaderDescription"}}
            @isRightSideItemsProvided={{has-block "pageHeaderRightSideItems"}}
          >
            <:pageTitle>
              {{yield to="pageHeaderPageTitle"}}
            </:pageTitle>
            <:default>
              {{yield to="pageHeaderDefault"}}
            </:default>
            <:description>
              {{yield to="pageHeaderDescription"}}
            </:description>
            <:rightSideItems as |item|>
              {{yield item to="pageHeaderRightSideItems"}}
            </:rightSideItems>
          </EuiPageHeader>
        {{/if}}
        <EuiPageContent
          @borderRadius="none"
          @hasShadow={{false}}
          @paddingSize={{@paddingSize}}
          style="display: flex"
        >
          <EuiPageContent
            @verticalPosition="center"
            @horizontalPosition="center"
            @hasShadow={{false}}
            @color="subdued"
            @paddingSize={{@pageContentProps.paddingSize}}
            class={{this.pageContentPropsClass}}
          >
            <EuiPageContentBody
              @restrictWidth={{@restrictWidth}}
              class={{this.pageContentBodyPropsClass}}
            >
              {{yield to="default"}}
            </EuiPageContentBody>
          </EuiPageContent>
        </EuiPageContent>
      </EuiPageBody>
    {{/if}}
  </EuiPage>
{{else if (eq this.template "empty")}}
  <EuiPage
    class={{this.classes}}
    @paddingSize={{if
      (or (has-block "pageSideBar") @pageSideBar)
      "none"
      @paddingSize
    }}
    @grow={{arg-or-default @grow true}}
    {{style (inline-styles min-height=(concat this.minHeight "px"))}}
    ...attributes
  >
    {{#if (has-block "pageSideBar")}}
      {{yield to="pageSideBar"}}
    {{else if @pageSideBar}}
      <EuiPageSideBar @sticky={{true}} @paddingSize={{@paddingSize}}>
        {{@pageSideBar}}
      </EuiPageSideBar>
    {{/if}}
    <EuiPageBody
      @restrictWidth={{if
        (or (has-block "pageSideBar") @pageSideBar)
        "none"
        @restrictWidth
      }}
      @paddingSize={{if
        (or (has-block "pageSideBar") @pageSideBar)
        @paddingSize
        "none"
      }}
      class={{this.pageBodyClass}}
    >
      {{#if (has-block "pageHeader")}}
        {{yield to="pageHeader"}}
      {{else if @pageHeader}}
        <EuiPageHeader
          @restrictWidth={{if
            (or (has-block "pageSideBar") @pageSideBar)
            @restrictWidth
            false
          }}
          @paddingSize={{if
            (or (has-block "pageSideBar") @pageSideBar)
            @paddingSize
            "none"
          }}
          @bottomBorder={{@bottomBorder}}
          @responsive={{arg-or-default @responsive true}}
          @iconType={{@pageHeader.iconType}}
          @tabs={{@pageHeader.tabs}}
          @pageTitle={{@pageHeader.pageTitle}}
          @isPageTitleProvided={{has-block "pageHeaderPageTitle"}}
          @isDefaultProvided={{has-block "pageHeaderDefault"}}
          @isDescriptionProvided={{has-block "pageHeaderDescription"}}
          @isRightSideItemsProvided={{has-block "pageHeaderRightSideItems"}}
        >
          <:pageTitle>
            {{yield to="pageHeaderPageTitle"}}
          </:pageTitle>
          <:default>
            {{yield to="pageHeaderDefault"}}
          </:default>
          <:description>
            {{yield to="pageHeaderDescription"}}
          </:description>
          <:rightSideItems as |item|>
            {{yield item to="pageHeaderRightSideItems"}}
          </:rightSideItems>
        </EuiPageHeader>
      {{/if}}
      <EuiPageContent
        @hasBorder={{false}}
        @hasShadow={{false}}
        @paddingSize={{"none"}}
        @color={{"transparent"}}
        @borderRadius={{"none"}}
        class={{this.pageContentPropsClass}}
      >
        <EuiPageContentBody
          @paddingSize={{if
            (or (has-block "pageSideBar") @pageSideBar)
            @paddingSize
            "none"
          }}
          @restrictWidth={{if
            (or (has-block "pageSideBar") @pageSideBar)
            @restrictWidth
            false
          }}
          class={{this.pageContentBodyPropsClass}}
        >
          {{#if (and this.fullHeight this.canFullHeight)}}
            <EuiFlexGroup
              class="eui-fullHeight"
              @gutterSize="none"
              @direction="column"
              @responsive={{false}}
            >
              <EuiFlexItem
                class={{class-names
                  (if
                    (eq this.fullHeight "noscroll")
                    "eui-fullHeight "
                    (if (eq this.fullHeight true) "eui-yScroll")
                  )
                }}
                @grow={{true}}
              >
                {{yield to="default"}}
              </EuiFlexItem>
            </EuiFlexGroup>
          {{else}}
            {{yield to="default"}}
          {{/if}}
        </EuiPageContentBody>
      </EuiPageContent>
    </EuiPageBody>
  </EuiPage>
{{else}}
  <EuiPage
    class={{this.classes}}
    @paddingSize="none"
    @grow={{arg-or-default @grow true}}
    {{style (inline-styles min-height=(concat this.minHeight "px"))}}
    ...attributes
  >
    {{#if (has-block "pageSideBar")}}
      {{yield to="pageSideBar"}}
    {{else if @pageSideBar}}
      <EuiPageSideBar @sticky={{true}} @paddingSize={{@paddingSize}}>
        {{@pageSideBar}}
      </EuiPageSideBar>
    {{/if}}
    {{#if (or (has-block "bottomBar") @bottomBar)}}
      <EuiPageBody
        @panelled={{true}}
        @paddingSize="none"
        class={{this.pageBodyClass}}
      >
        <EuiPageBody @paddingSize="l">
          {{#if (has-block "pageHeader")}}
            {{yield to="pageHeader"}}
          {{else if @pageHeader}}
            <EuiPageHeader
              @restrictWidth={{@restrictWidth}}
              @paddingSize={{@paddingSize}}
              @responsive={{arg-or-default @responsive true}}
              @iconType={{@pageHeader.iconType}}
              @tabs={{@pageHeader.tabs}}
              @pageTitle={{@pageHeader.pageTitle}}
              @isPageTitleProvided={{has-block "pageHeaderPageTitle"}}
              @isDefaultProvided={{has-block "pageHeaderDefault"}}
              @isDescriptionProvided={{has-block "pageHeaderDescription"}}
              @isRightSideItemsProvided={{has-block "pageHeaderRightSideItems"}}
            >
              <:pageTitle>
                {{yield to="pageHeaderPageTitle"}}
              </:pageTitle>
              <:default>
                {{yield to="pageHeaderDefault"}}
              </:default>
              <:description>
                {{yield to="pageHeaderDescription"}}
              </:description>
              <:rightSideItems as |item|>
                {{yield item to="pageHeaderRightSideItems"}}
              </:rightSideItems>
            </EuiPageHeader>
          {{/if}}

          <EuiPageContent
            {{! @hasBorder={pageHeader === undefined ? false : undefined} }}
            @hasBorder={{false}}
            @hasShadow={{false}}
            @paddingSize={{"none"}}
            @color={{"plain"}}
            @borderRadius={{"none"}}
            class={{this.pageContentPropsClass}}
          >
            <EuiPageContentBody
              @restrictWidth={{@restrictWidth}}
              @paddingSize={{@paddingSize}}
              @borderRadius={{@borderRadius}}
              class={{this.pageContentBodyPropsClass}}
            >
              {{yield to="default"}}
            </EuiPageContentBody>
          </EuiPageContent>
        </EuiPageBody>
        {{#if (has-block "bottomBar")}}
          {{yield to="bottomBar"}}
        {{else if @bottomBar}}
          <EuiBottomBar
            @paddingSize={{@paddingSize}}
            @position={{if
              (and this.canFullHeight this.fullHeight)
              "static"
              "sticky"
            }}
            {{! {...(bottomBarProps as unknown)} }}
          >
            {{! {/* Wrapping the contents with EuiPageContentBody allows us to match the restrictWidth to keep the contents aligned */} }}
            <EuiPageContentBody
              @paddingSize={{"none"}}
              @restrictWidth={{@restrictWidth}}
            >
              {{@bottomBar}}
            </EuiPageContentBody>
          </EuiBottomBar>
        {{/if}}
      </EuiPageBody>
    {{else}}
      <EuiPageBody @paddingSize="l">
        {{#if (has-block "pageHeader")}}
          {{yield to="pageHeader"}}
        {{else if @pageHeader}}
          <EuiPageHeader
            @restrictWidth={{@restrictWidth}}
            @paddingSize={{@paddingSize}}
            @responsive={{arg-or-default @responsive true}}
            @iconType={{@pageHeader.iconType}}
            @tabs={{@pageHeader.tabs}}
            @pageTitle={{@pageHeader.pageTitle}}
            @description={{@pageHeader.description}}
            @isPageTitleProvided={{has-block "pageHeaderPageTitle"}}
            @isDefaultProvided={{has-block "pageHeaderDefault"}}
            @isDescriptionProvided={{has-block "pageHeaderDescription"}}
            @isRightSideItemsProvided={{has-block "pageHeaderRightSideItems"}}
          >
            <:pageTitle>
              {{yield to="pageHeaderPageTitle"}}
            </:pageTitle>
            <:default>
              {{yield to="pageHeaderDefault"}}
            </:default>
            <:description>
              {{yield to="pageHeaderDescription"}}
            </:description>
            <:rightSideItems as |item|>
              {{yield item to="pageHeaderRightSideItems"}}
            </:rightSideItems>
          </EuiPageHeader>
        {{/if}}

        <EuiPageContent
          {{! @hasBorder={pageHeader === undefined ? false : undefined} }}
          @hasBorder={{false}}
          @hasShadow={{false}}
          @paddingSize={{"none"}}
          @color={{"plain"}}
          @borderRadius={{"none"}}
          class={{this.pageContentPropsClass}}
        >
          <EuiPageContentBody
            @restrictWidth={{@restrictWidth}}
            @paddingSize={{@paddingSize}}
            @borderRadius={{@borderRadius}}
            class={{this.pageContentBodyPropsClass}}
          >
            {{#if (and this.fullHeight this.canFullHeight)}}
              <EuiFlexGroup
                class="eui-fullHeight"
                @gutterSize="none"
                @direction="column"
                @responsive={{false}}
              >
                <EuiFlexItem
                  class={{class-names
                    (if
                      (eq this.fullHeight "noscroll")
                      "eui-fullHeight "
                      (if (eq this.fullHeight true) "eui-yScroll")
                    )
                  }}
                  @grow={{true}}
                >
                  {{yield to="default"}}
                </EuiFlexItem>
              </EuiFlexGroup>
            {{else}}
              {{yield to="default"}}
            {{/if}}
          </EuiPageContentBody>
        </EuiPageContent>
      </EuiPageBody>
    {{/if}}
  </EuiPage>
{{/if}}