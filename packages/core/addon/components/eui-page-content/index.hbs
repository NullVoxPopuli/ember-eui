<EuiPanel
  class={{class-names
    componentName="EuiPageContent"
    verticalPosition=@verticalPosition
    horizontalPosition=@horizontalPosition
    borderRadius=@borderRadius
  }}
  @hasShadow={{@hasShadow}}
  @hasBorder={{@hasBorder}}
  @paddingSize={{arg-or-default @paddingSize "l"}}
  @borderRadius={{@borderRadius}}
  @color={{@color}}
  @grow={{@grow}}
  ...attributes
>
  {{yield}}
</EuiPanel>