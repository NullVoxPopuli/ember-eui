{{#if (and @href (not @isDisabled))}}
  <a
    class={{class-names
      (if @isDisabled "euiButtonIcon-isDisabled")
      componentName="EuiButtonIcon"
      display=(arg-or-default @display "empty")
      color=(arg-or-default @color "primary")
      size=(arg-or-default @size "xs")
    }}
    href={{@href}}
    target={{@target}}
    ...attributes
  >
    {{#if @iconType}}
      <EuiIcon
        @iconClasses="euiButtonIcon__icon {{@iconClasses}}"
        @type={{@iconType}}
        @size={{arg-or-default @iconSize "m"}}
        @useSvg={{@useSvg}}
        @useComponent={{@useComponent}}
        @color="inherit"
        aria-hidden="true"
      />
    {{/if}}
  </a>
{{else}}
  <button
    class={{class-names
      (if @isDisabled "euiButtonIcon-isDisabled")
      componentName="EuiButtonIcon"
      display=(arg-or-default @display "empty")
      color=(arg-or-default @color "primary")
      size=(arg-or-default @size "xs")
    }}
    disabled={{or @isDisabled @disabled}}
    aria-pressed={{if @isSelected "true" "false"}}
    type={{if @type @type "button"}}
    ...attributes
  >
    {{#if @iconType}}
      <EuiIcon
        @iconClasses="euiButtonIcon__icon {{@iconClasses}}"
        @type={{@iconType}}
        @size={{@iconSize}}
        @useSvg={{@useSvg}}
        @color="inherit"
        @useComponent={{@useComponent}}
        aria-hidden="true"
      />
    {{/if}}
  </button>
{{/if}}