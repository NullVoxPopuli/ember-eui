{{#if (and @href (not @isDisabled))}}
  <a
    class={{class-names componentName="EuiButtonIcon" color=(arg-or-default @color "primary")}}
    href={{@href}}
    target={{@target}}
    ...attributes
  >
    {{#if @iconType}}
      <EuiIcon
        @iconClasses="euiButtonIcon__icon {{@iconClasses}}"
        @type={{@iconType}}
        @size={{arg-or-default @iconSize "m"}}
        @useSvg={{@useSvg}}
        @useComponent={{@useComponent}}
        aria-hidden="true"
      />
    {{/if}}
  </a>
{{else}}
  <button
    class={{class-names componentName="EuiButtonIcon" color=(arg-or-default @color "primary")}}
    disabled={{@isDisabled}}
    aria-pressed={{if @isSelected "true" "false"}}
    type={{if @type @type "button"}}
    ...attributes
  >
    {{#if @iconType}}
      <EuiIcon
        @iconClasses="euiButtonIcon__icon {{@iconClasses}}"
        @type={{@iconType}}
        @size={{@iconSize}}
        @useSvg={{@useSvg}}
        @useComponent={{@useComponent}}
        aria-hidden="true"
      />
    {{/if}}
  </button>
{{/if}}