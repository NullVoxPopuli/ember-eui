{{#let
  (has-block "label")
  (arg-or-default @id (unique-id))
  (arg-or-default @useLabelBlock true) as |hasLabelBlock id useLabelBlock|
}}
  {{#let
    (class-names
      (if (and (not useLabelBlock) (not hasLabelBlock) (not @label)) "euiRadio--noLabel")
      (if @compressed "euiRadio--compressed")
      "euiRadio"
    ) as |classes|
  }}
    <div class={{classes}}>
      <input
        class="euiRadio__input"
        type="radio"
        id={{id}}
        checked={{@checked}}
        disabled={{@disabled}}
        name={{@name}}
        ...attributes
        {{did-insert (optional @inputRef)}}
      />
      <div class="euiRadio__circle"></div>
      {{#if (or (and hasLabelBlock useLabelBlock) @label)}}
        {{#if (and hasLabelBlock useLabelBlock)}}
          <label class="euiRadio__label" for={{id}}>
            {{yield to="label"}}
          </label>
        {{else}}
          <label class="euiRadio__label" for={{id}}>
            {{@label}}
          </label>
        {{/if}}
      {{/if}}
    </div>
  {{/let}}
{{/let}}