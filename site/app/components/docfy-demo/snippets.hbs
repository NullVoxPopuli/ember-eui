<EuiSplitPanel::Inner
  class="docfy-demo__snippets"
  @borderRadius="none"
  @hasBorder={{false}}
  @hasShadow={{false}}
  @paddingSize="none"
  @color="subdued"
>
  <EuiFlexGroup
    @gutterSize="none"
    @responsive={{false}}
    @wrap={{true}}
    @alignItems="center"
  >
    <EuiFlexItem>
      <EuiTabs
        class={{class-names
          "guideSectionTabs"
          (if this.isSingleSelected "guideSectionTabs--open")
        }}
        @display="condensed"
        @size="s"
      >
        {{#each this.snippets as |snippet|}}
          <EuiTab
            class="docfy-demo__snippets__tabs__button guideSectionTabs__tab"
            @id={{snippet.id}}
            @isSelected={{eq this.active snippet.id}}
            {{on
              "click"
              (fn
                this.setActiveSnippet
                (if (eq this.active snippet.id) "" snippet.id)
              )
            }}
          >
            {{snippet.name}}
          </EuiTab>
        {{/each}}
      </EuiTabs>
    </EuiFlexItem>
  </EuiFlexGroup>
  {{#if this.active}}
    <EuiHorizontalRule @margin="none" />
  {{/if}}
  {{yield
    (component
      "docfy-demo/snippet"
      registerSnippet=this.registerSnippet
      active=this.active
      multiple=true
    )
  }}
</EuiSplitPanel::Inner>