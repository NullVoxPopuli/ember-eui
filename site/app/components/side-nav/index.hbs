{{!template-lint-disable}}
<EuiFlexGroup
  @direction="column"
  class="h-full"
  @gutterSize="none"
  @responsive={{false}}
>
  <EuiFlexItem @grow={{false}} class="guideSideNav__search">
    <EuiFieldSearch
      @placeholder="Search"
      @onSearch={{@onSearch}}
      @incremental={{true}}
      @isClearable={{@isClearable}}
    />
  </EuiFlexItem>
  <EuiFlexItem class="guideSideNav__content eui-yScrollWithShadows">
    <EuiSideNav
      @heading={{@heading}}
      @isOpenMobile={{@isOpenMobile}}
      @toggleOpenOnMobile={{@toggleOpenOnMobile}}
      @items={{@items}}
      @selectedItem={{@selectedItem}}
      @paddingSize={{@paddingSize}}
    />
  </EuiFlexItem>
</EuiFlexGroup>