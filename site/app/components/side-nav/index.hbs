{{!template-lint-disable}}
<EuiFlexGroup @direction="column" class="h-full" @gutterSize="none">
  <EuiFlexItem @grow={{false}} style="padding: 8px 8px 16px">
    <EuiFieldSearch
      @placeholder="Search"
      @onSearch={{@onSearch}}
			@incremental={{true}}
			@clear={{fn @onSearch ""}}
    />
  </EuiFlexItem>
  <EuiFlexItem
    style="padding: 0 24px 24px; height: 100%; overflow-x: hidden; overflow-y: auto;"
  >
    <EuiSideNav
      @heading={{@heading}}
      @isOpenMobile={{@isOpenMobile}}
      @toggleOpenOnMobile={{@toggleOpenOnMobile}}
      @items={{@items}}
      @selectedItem={{@selectedItem}}
    />
  </EuiFlexItem>
</EuiFlexGroup>